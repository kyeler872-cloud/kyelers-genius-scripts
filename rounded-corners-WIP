// ==UserScript==
// @name         Genius Rounded UI
// @namespace    http://tampermonkey.net/
// @version      1.0
// @description  Make every UI element on Genius.com have rounded corners ðŸŒ™
// @author       You
// @match        https://genius.com/*
// @grant        GM_addStyle
// @run-at       document-end
// ==/UserScript==

(function () {
  'use strict';

  // Global rounded corner style â€” covers all major UI elements
  GM_addStyle(`
    /* Global rounding */
    * {
      border-radius: 12px !important;
      overflow: hidden;
    }

    /* Prevent layout issues on text */
    p, span, h1, h2, h3, h4, h5, h6, a, strong, em, b, i {
      border-radius: 0 !important;
      overflow: visible !important;
    }

    /* Keep header shapes correct */
    header, nav {
      border-radius: 0 !important;
    }

    /* Images, cover art, avatars â€” slightly stronger rounding */
    img, .SizedImage__Image-sc-3647916d-1 {
      border-radius: 16px !important;
    }

    /* Buttons, boxes, and cards */
    button, .Button, .PageBackground__BackgroundDiv-sc-4o0m3e-1, .SongHeader-desktop__CoverArtContainer-sc-e33a5cab-7,
    .RightSidebar__Container-sc-e6620a93-0, .StickyNavSentinel__Sentinel-sc-64ca98a7-0, .Lyrics__Container-sc-1ynbvzw-6 {
      border-radius: 14px !important;
    }

    /* Input fields */
    input, textarea, select {
      border-radius: 10px !important;
    }

    /* Comments, annotations, etc. */
    .Annotation, .AnnotationView, .Comment, .Discussion {
      border-radius: 10px !important;
    }

    /* Keep Genius sticky bars clean */
    .HeaderWithCoverArt__Container-sc-1c0xh8v-0, .Header__Container-sc-1c0xh8v-1 {
      border-radius: 0 !important;
    }

    /* Slight shadow for modern look */
    div, img, button, .Button {
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    /* Smooth transitions for hover/focus states */
    * {
      transition: border-radius 0.3s ease, box-shadow 0.3s ease;
    }
  `);

  console.log('[Rounded UI] All Genius UI elements now have rounded corners âœ¨');
})();
